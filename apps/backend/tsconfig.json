
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@college-erp/common/*": ["../../packages/common/src/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", ".env"],
  "exclude": ["node_modules", "dist", "src/db/dev.sqlite"]
}
